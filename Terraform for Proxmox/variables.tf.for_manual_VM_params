        vm_state    = string
        onboot      = bool
        startup     = string
        ipconfig    = string
        bridge      = string
        network_tag = number
        ciuser      = string
        cipassword  = string
    }))
    default = {
        "VM-NAME-01" = {
            vm_id       = 101
            name        = "VM-NAME-01"
            cores       = 2
            memory      = 3072
            vm_state    = "stopped"
