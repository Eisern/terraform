variable "proxmox_api_url" {
    type = string
}

variable "proxmox_api_token_id" {
    type = string
}

variable "proxmox_api_token_secret" {
    type = string
}

variable vm_config {
    type = map(object({
        name        = string
        vm_id       = number
        cores       = number
