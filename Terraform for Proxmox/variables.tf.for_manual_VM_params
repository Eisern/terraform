            ipconfig    = "ip=10.10.10.10/24,gw=10.10.10.1"
            bridge      = "vmbr0"
            network_tag = 0
            ciuser      = "имя_пользователя_внутри_VM"
            cipassword  = "пароль_этого_пользователя"
        }

        "VM-NAME-02" = {
            vm_id       = 102
            name        = "VM-NAME-02"
            cores       = 2
            memory      = 3072
            vm_state    = "stopped"
            onboot      = true
            startup     = "order=2"
            ipconfig    = "ip=10.10.10.10/24,gw=10.10.10.1"
            bridge      = "vmbr0"
            network_tag = 0
            ciuser      = "имя_пользователя_внутри_VM"
            cipassword  = "пароль_этого_пользователя"
        }
    }
}